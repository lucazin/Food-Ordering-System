
@model IEnumerable<Food_Order.ViewModels.OrderItemViewModel>
@{
    if (Session["Username"] == null) 
    {
        Response.Redirect("~/Account/Login/");
    }
    else if(Session["Username"].ToString() != "admin"){
        Response.Redirect("~/Home/Index/");
    }
    int count = 1;
}


         
            
                <table class="table table-hover">
                    <thead class="text-primary">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@count.ToString()</td>
                            <td>@item.foodItem.name</td>
                            <td>@item.foodItem.description</td>
                            <td>@item.orderDetail.quantity</td>
                            <td>Rs. @(int.Parse(item.foodItem.price) * int.Parse(item.orderDetail.quantity))</td>
                            <td><img src="~/Images/@item.foodItem.image" width="75" height="75" /></td>
                        </tr>
                        count++;
                    }
                </table>
          